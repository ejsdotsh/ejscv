{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/ejsdotsh/ejscv/refs/heads/main/ejscv.typ.schema.json",
  "type": "object",
  "default": { },
  "title": "ejscv data schema",
  "required": [
    "contact",
    "main_summary",
    "education",
    "skills",
    "jobs"
  ],
  "properties": {
    "contact": {
      "type": "object",
      "default": { },
      "required": [
        "name",
        "email"
      ],
      "properties": {
        "name": {
          "type": "string",
          "default": ""
        },
        "location": {
          "type": "string",
          "default": ""
        },
        "email": {
          "type": "string",
          "default": ""
        },
        "phone": {
          "type": "string",
          "default": ""
        },
        "links": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "url"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "url": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "main_summary": {
      "type": "object",
      "default": { },
      "required": [
        "summary"
      ],
      "properties": {
        "summary": {
          "type": "string",
          "default": ""
        },
        "highlights": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "institution",
          "area",
          "degree"
        ],
        "properties": {
          "institution": {
            "type": "string"
          },
          "area": {
            "type": "string"
          },
          "degree": {
            "type": "string"
          },
          "start_date": {
            "type": "string"
          },
          "end_date": {
            "type": "string"
          },
          "location": {
            "type": "string"
          }
        }
      }
    },
    "core_skills": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "label",
          "skill"
        ],
        "properties": {
          "label": {
            "type": "string"
          },
          "skill": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "jobs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "company",
          "title",
          "start_date",
          "end_date"
        ],
        "properties": {
          "company": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "start_date": {
            "type": "string"
          },
          "end_date": {
            "type": "string"
          },
          "location": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "highlights": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "technologies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "url"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "start_date": {
            "type": "string"
          },
          "end_date": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "highlights": {
            "type": "array"
          }
        }
      }
    },
    "affiliations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "roles"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "start_date": { "type": "string" },
                "end_date": { "type": "string" }
              }
            }
          },
          "start_date": {
            "type": "string"
          },
          "end_date": {
            "type": "string"
          }
        }
      }
    }
  }
}
